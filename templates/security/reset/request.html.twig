{% extends 'base.html.twig' %}

{% block title %}Reset Password{% endblock %}
{% block navi %}
    <nav class="navbar navbar-expand-sm bg-light justify-content-center">
        <ul class="navbar-nav">
            <li class="nav-item"><a class="nav-link" href="{{ path('account_home') }}">My account</a></li>
            <li class="nav-item"><a class="nav-link" href="{{ path('list_users') }}" >Users</a></li>
            <li class="nav-item"><a class="nav-link text-danger" href="{{ path('app_logout') }}">Logout</a><br></li>
        </ul>
    </nav>
{% endblock %}
{% block body %}
    {% include '_flashes.html.twig' %}
    <h1 class="container p-5 my-5 border bg-light text-dark text-center">Reset your password</h1>
    <div class="container p-5 my-5 text-center">
    {{ form_start(form) }}
    <div class="mb-3 mt-3">
        {{ form_widget(form.email, {'attr': {'placeholder': 'Email'}}) }}
        {{ form_errors(form.email) }}
    </div>
    <button type="submit" class="btn btn-block btn-success">Reset password</button>
    {{ form_end(form) }}
    </div>
{% endblock %}
