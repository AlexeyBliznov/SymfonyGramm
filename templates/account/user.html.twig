{% extends 'base.html.twig' %}

{% block title %}Hi{% endblock %}
{% block navi %}
    <nav class="navbar navbar-expand-sm bg-light justify-content-center">
        <ul class="navbar-nav">
            <li class="nav-item"><a class="nav-link" href="{{ path('account_home') }}">My account</a></li>
            <li class="nav-item"><a class="nav-link" href="{{ path('list_users') }}" >Users</a></li>
            <li class="nav-item"><a class="nav-link text-danger" href="{{ path('app_logout') }}">Logout</a><br></li>
        </ul>
    </nav>
{% endblock %}
{% block body %}
    {% include '_flashes.html.twig' %}
    <div class="d-flex p-3 justify-content-between">
    <div class="card" style="width:700px">
        <img class="card-img-top" src="{{ showUser.avatar }}" alt="Card image"><br>
        <div class="d-flex p-3 justify-content-between">
        <div><a class="card-link" href="/account/user/{{ showUser.id }}/{{ showUser.likeUrl }}">{{ showUser.likeName }}</a></div>
        <div>Likes {{ showUser.likes }}</div>
        </div>
        <div class="card-body">
            <h4 class="card-title">{{ showUser.name }}</h4>
            <p class="card-text">{{ showUser.biography }}</p>
            <a href="/account/user/{{ showUser.id }}/{{ showUser.subUrl }}" class="btn btn-primary">{{ showUser.subName }}</a>
        </div>
    </div>
    <div>
    {% if showUser.news|length > 0 %}
    <h2>Posts</h2><br>
    {% for key, value in showUser.news %}
    <div class="card" style="width:400px">
        <img class="card-img-top" src="{{ value.image }}" alt="Card image">
        <div class="card-body">
            <p class="card-text">{{ key }}</p>
            {{ value.date }}
            <div>
            </div>
            {% endfor %}
            {% endif %}
    </div>
    </div>
{% endblock %}
