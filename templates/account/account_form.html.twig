{% extends 'base.html.twig' %}

{% block title %}Account{% endblock %}

{% block navi %}
    <nav class="navbar navbar-expand-sm bg-light justify-content-center">
        <ul class="navbar-nav">
            <li class="nav-item"><a class="nav-link" href="{{ path('home') }}">Home</a></li>
        </ul>
    </nav>
{% endblock %}

{% block body %}
    <h1 class="container p-5 my-5 border bg-light text-dark text-center">Create your account</h1>
    <div class="container p-5 my-5 text-center">
    {{ form_start(form) }}
        <div class="mb-3 mt-3">
            {{ form_widget(form.firstName, {'attr': {'placeholder': 'First name'}}) }}
        </div>
        <div class="mb-3">
            {{ form_widget(form.lastName, {'attr': {'placeholder': 'Last name'}}) }}
        </div>
        <div class="mb-3">
            {{ form_widget(form.biography, {'attr': {'placeholder': 'Biography'}}) }}
        </div>
        <div class="mb-3">
            {{ form_widget(form.avatar, {'attr': {'placeholder': 'Avatar'}}) }}
        </div>
    <button type="submit" class="btn btn-block btn-success">Create Account</button>
    {{ form_end(form) }}
    </div>
{% endblock %}
