{% extends 'base.html.twig' %}

{% block title %}Account{% endblock %}
{% block navi %}
    <nav class="navbar navbar-expand-sm bg-light justify-content-center">
        <ul class="navbar-nav">
            <li class="nav-item"><a class="nav-link" href="{{ path('account_home') }}">My account</a></li>
            <li class="nav-item"><a class="nav-link" href="{{ path('list_users') }}" >Users</a></li>
            <li class="nav-item"><a class="nav-link text-danger" href="{{ path('app_logout') }}">Logout</a><br></li>
        </ul>
    </nav>
{% endblock %}
{% block body %}
    <h1 class="container p-5 my-5 border bg-light text-dark text-center">Edit your avatar</h1>
    <div class="container p-5 my-5 text-center">
    {{ form_start(form) }}
    <img class="img-thumbnail float-end" src="{{ avatar }}" width="200" height="auto" /><br>
    <div class="mb-3 mt-3">
        {{ form_widget(form.avatar, {'attr': {'placeholder': 'Avatar'}}) }}
    </div>
    <button type="submit" class="btn btn-block btn-success">Edit avatar</button>
    {{ form_end(form) }}
    </div>
{% endblock %}
